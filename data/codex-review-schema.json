{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "confidence", "rationale", "evidence"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["Conform", "Not conform", "Non applicable"]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "rationale": { "type": "string" },
    "evidence": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
